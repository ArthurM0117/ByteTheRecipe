<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".add">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:background="@drawable/baseline_add_24">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add recipe"
            android:textSize="30sp"
            android:textAlignment="center" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/baseline_add_a_photo_24"
            android:id="@+id/uploadImage"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/editText_recipe_name"
            android:hint="Recipe title"
            android:inputType="textPersonName"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_below="@+id/uploadImage"
            android:background="@drawable/border" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/editText_number_person"
            android:hint="number of persons"
            android:inputType="textPersonName"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_below="@+id/editText_recipe_name"
            android:background="@drawable/border" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/editText_ingredient"
            android:hint="ingredient name"
            android:inputType="textPersonName"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_below="@+id/editText_number_person"
            android:background="@drawable/border" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/editText_description"
            android:hint="Description"
            android:inputType="textPersonName"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_below="@+id/editText_ingredient"
            android:background="@drawable/border" />

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/uploadButton"
            android:text="Upload"/>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>